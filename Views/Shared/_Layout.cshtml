<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lanchonete App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">🍔 Lanchonete</a>
                <div class="navbar-nav">
                    <a class="nav-link" href="/">Cardápio</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="nav-link" href="/Produtos">Gerenciar Produtos</a>
                        <a class="nav-link" href="/Clientes">Clientes</a>
                        <a class="nav-link" href="/Pedidos">Pedidos</a>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="nav-link" href="/Relatorios/Dashboard">Dashboard</a>
                        }
                    }
                </div>
                <div class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="navbar-nav">
                            <span class="navbar-text me-3">
                                👋 Olá, <strong>@User.Identity.Name</strong>
                                @if (User.IsInRole("Administrador"))
                                {
                                    <span class="badge bg-warning text-dark">Admin</span>
                                }
                            </span>
                            <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm">Sair</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <span class="navbar-text">
                            📞 <strong>(11) 99999-9999</strong>
                        </span>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p class="mb-1">🍔 <strong>Lanchonete Delivery</strong></p>
            <p class="mb-1">📞 <strong>(11) 99999-9999</strong> | 📱 WhatsApp: <strong>(11) 98888-8888</strong></p>
            <p class="mb-0">📍 Rua das Delícias, 123 - Centro - São Paulo/SP</p>
        </div>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>