@model LanchoneteApp.Models.Produto
@{
    ViewData["Title"] = "Novo Produto";
}

<h2>Novo Produto</h2>

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Categoria" class="form-label"></label>
                <select asp-for="Categoria" class="form-select">
                    <option value="">Selecione...</option>
                    <option value="Lanches">Lanches</option>
                    <option value="Bebidas">Bebidas</option>
                    <option value="Acompanhamentos">Acompanhamentos</option>
                    <option value="Sobremesas">Sobremesas</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Preco" class="form-label"></label>
                <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-3">
                <input asp-for="Disponivel" class="form-check-input" type="checkbox" />
                <label asp-for="Disponivel" class="form-check-label">Dispon√≠vel</label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</form>