@model LanchoneteApp.Models.Produto
@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Excluir Produto</h2>

<h3>Tem certeza que deseja excluir este produto?</h3>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text">@Model.Descricao</p>
        <p class="card-text"><strong>Categoria:</strong> @Model.Categoria</p>
        <p class="card-text"><strong>Pre√ßo:</strong> R$ @Model.Preco.ToString("F2")</p>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>